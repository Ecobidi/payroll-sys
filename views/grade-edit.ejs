<%-include ("partials/top") %>
<div class="row space">
  <div class="col-12">
    <div class="d-flex justify-content-between align-items-center border-bottom pb-2">
      <h4 class="page-title">Update Grade Information</h4>
    </div>
  </div> 
</div>

<div class="row space">
<div class="col-12">

<form action="/grades/update" method="POST" class="card">

  <fieldset class="row card-body">
    <div class="form-group col-md-4">
      <label>Grade Name: <strong class="text-danger">*</strong></label>
      <input required type="text" class="form-control" name="grade_name" value='<%= grade.grade_name %>' />
    </div>
    <div class="form-group col-md-4">
      <label>Basic Salary: <strong class="text-danger">*</strong></label>
      <input required type="number" class="form-control" name="basic_salary" value='<%= grade.basic_salary %>' />
    </div>
    <div class="form-group col-md-4">
      <label>Housing Allowance (NGN): <strong class="text-danger">*</strong></label>
      <input type="number" class="form-control" name="housing_allowance" value='<%= grade.housing_allowance%>' />
    </div>
    <div class="form-group col-md-4">
      <label>Medical Allowance (NGN): <strong class="text-danger">*</strong></label>
      <input type="number" class="form-control" name="medical_allowance" value='<%= grade.medical_allowance %>' />
    </div>
    <div class="form-group col-md-4">
      <label>Transport Allowance (NGN): <strong class="text-danger">*</strong></label>
      <input type="number" class="form-control" name="transport_allowance" value='<%= grade.transport_allowance%>' />
    </div>
    <div class="form-group col-md-4">
      <label>Other Allowances (NGN): <strong class="text-danger">*</strong></label>
      <input type="number" class="form-control" name="other_allowance" value='<%= grade.other_allowance %>' />
    </div>
    <div class="form-group col-md-4">
      <label>Tax (NGN): <strong class="text-danger">*</strong></label>
      <input type="number" class="form-control" name="tax" value='<%= grade.tax %>' />
    </div>
  </fieldset>
  
  <div class="form-group mt-4">
    <button class="btn btn-primary form-control" type="submit">UPDATE</button>
  </div>
</form>

